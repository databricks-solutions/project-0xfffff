{
  "permissions": {
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(git push --force:*)",
      "Bash(git reset --hard:*)",
      "Bash(alembic revision:*)",
      "Bash(alembic downgrade:*)"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(alembic upgrade:*)",
      "Edit(server/models/*)",
      "Edit(alembic/*)",
      "Edit(.github/*)",
      "Write(alembic/*)",
      "Edit(specs/*)",
      "Write(specs/*)"
    ],
    "allow": [
      "Bash(just:*)",
      "Bash(uv run:*)",
      "Bash(npm:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Read(*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python -c \"from mlflow.claude_code.hooks import stop_hook_handler; stop_hook_handler()\""
          }
        ]
      }
    ]
  },
  "environment": {
    "MLFLOW_CLAUDE_TRACING_ENABLED": "true",
    "MLFLOW_TRACKING_URI": "databricks",
    "MLFLOW_EXPERIMENT_ID": "2517718719903786"
  }
}