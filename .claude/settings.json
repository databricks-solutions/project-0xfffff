{
  "permissions": {
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(git push --force:*)",
      "Bash(git reset --hard:*)",
      "Bash(alembic revision:*)",
      "Bash(alembic downgrade:*)",
      "Edit(specs/*)",
      "Write(specs/*)"
