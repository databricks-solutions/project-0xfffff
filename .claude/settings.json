    "allow": [
      "Bash(just:*)",
      "Bash(uv run:*)",
      "Bash(npm:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Read(*)"
    ]
  }
}
